class Solution {
public:
    bool isValid(string s) {
        stack<char> S;
        for(int i=0; i<s.length(); i++)
        {
            if(s[i] == '(' || s[i] == '{' || s[i] == '[')
            {
                //opening braces; push them on to the stack
                S.push(s[i]);
            }
            else
            {
                //assuming we have only opening and closing braces in the string and nothing else
                if(!S.empty())
                {
                    char temp = S.top();
                    if((temp == '(' && s[i] == ')') || (temp == '{' && s[i] == '}') || (temp == '[' && s[i] == ']'))
                    {
                        //the order of brackets is correct
                        //pop the top from the stack
                        S.pop();
                    }
                    else
                    {
                    return false;
                    }
                }
                else
                {
                    return false;
                }
                
                
            }
        }
        if(S.empty())
        {
            return true;
        }
        return false;
        
    }
};
